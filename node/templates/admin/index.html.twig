{% extends '@admin/base.html.twig' %}



{% block sidebar_status %}
    <div class="status-indicators">
        <div class="status-dot online"></div>
        <div class="status-dot warning"></div>
        <div class="status-dot critical"></div>
        <span>SYSTEM ONLINE</span>
    </div>
{% endblock %}



{% block main_content %}
    <div class="dashboard-grid">
        <div class="panel">
            <h3 class="panel-title">System Metrics</h3>
            <div class="metric">
                <span>CPU Usage</span>
                <span class="metric-value">73.2%</span>
            </div>
            <div class="progress-bar">
                <div class="progress-fill" style="width: 73.2%"></div>
            </div>
            <div class="metric">
                <span>Memory</span>
                <span class="metric-value">8.4 GB / 16 GB</span>
            </div>
            <div class="progress-bar">
                <div class="progress-fill" style="width: 52.5%"></div>
            </div>
            <div class="metric">
                <span>Network I/O</span>
                <span class="metric-value">1.2 TB</span>
            </div>
        </div>

        <div class="panel">
            <h3 class="panel-title">Active Connections</h3>
            <div class="metric">
                <span>Total Users</span>
                <span class="metric-value">2,847</span>
            </div>
            <div class="metric">
                <span>Active Sessions</span>
                <span class="metric-value">1,203</span>
            </div>
            <div class="metric">
                <span>Peak Today</span>
                <span class="metric-value">3,156</span>
            </div>
            <button class="cyber-button">ANALYZE DATA</button>
        </div>

        <div class="panel">
            <h3 class="panel-title">Security Status</h3>
            <div class="metric">
                <span>Threat Level</span>
                <span class="metric-value" style="color: #ffff00;">ELEVATED</span>
            </div>
            <div class="metric">
                <span>Blocked Attacks</span>
                <span class="metric-value">47</span>
            </div>
            <div class="metric">
                <span>Last Scan</span>
                <span class="metric-value">2 min ago</span>
            </div>
            <button class="cyber-button">INITIATE SCAN</button>
        </div>
    </div>

    <div class="panel">
        <h3 class="panel-title">Recent Activity Log</h3>
        <table class="data-table">
            <thead>
            <tr>
                <th>Timestamp</th>
                <th>User</th>
                <th>Action</th>
                <th>Status</th>
            </tr>
            </thead>
            <tbody>
            <tr>
                <td>2025-09-01 14:32:15</td>
                <td>admin.nova</td>
                <td>System backup initiated</td>
                <td style="color: #00ff00;">SUCCESS</td>
            </tr>
            <tr>
                <td>2025-09-01 14:28:42</td>
                <td>user.ghost</td>
                <td>Data export request</td>
                <td style="color: #ffff00;">PENDING</td>
            </tr>
            <tr>
                <td>2025-09-01 14:25:17</td>
                <td>sys.monitor</td>
                <td>Security scan completed</td>
                <td style="color: #00ff00;">SUCCESS</td>
            </tr>
            <tr>
                <td>2025-09-01 14:22:03</td>
                <td>admin.cipher</td>
                <td>User permissions updated</td>
                <td style="color: #00ff00;">SUCCESS</td>
            </tr>
            </tbody>
        </table>

        <div class="terminal">
            <div class="terminal-line"><span class="terminal-prompt">root@neural-core:~$</span> systemctl status neural-matrix</div>
            <div class="terminal-line">‚óè neural-matrix.service - Neural Matrix Control System</div>
            <div class="terminal-line">   Loaded: loaded (/etc/systemd/system/neural-matrix.service; enabled)</div>
            <div class="terminal-line">   Active: active (running) since Mon 2025-09-01 14:00:12 UTC; 32min ago</div>
            <div class="terminal-line">   Memory: 2.1G</div>
            <div class="terminal-line"><span class="terminal-prompt">root@neural-core:~$</span> <span class="glitch">_</span></div>
        </div>
    </div>
{% endblock %}